<resources>
    <style name="ThemeActivity" parent="Base.V7.Theme.AppCompat" mce_bogus="1">
        <!--<item name="android:windowAnimationStyle">@style/animationActivity</item>-->
    </style>

    <!-- 切换activity动画-->
    <style name="animationActivity" parent="@android:style/Animation.Activity" mce_bogus="1">
        <!--<item name="android:activityOpenEnterAnimation">@anim/anim_open_activity_enter</item>-->
        <!--<item name="android:activityOpenExitAnimation">@anim/anim_open_activity_exit</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/anim_close_activity_enter</item>-->
        <!--<item name="android:activityCloseExitAnimation">@anim/anim_close_activity_exit</item>-->
    </style>

    <style name="verticalAnimActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/anim_bottom_to_top_enter</item>
    </style>

    <style name="verticalAnimTheme" parent="@android:style/Theme">
        <item name="android:windowAnimationStyle">@style/verticalAnimActivity</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="verticalAnim">
        <item name="android:windowEnterAnimation">@anim/anim_bottom_to_top_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_top_to_bottom_exit</item>
    </style>

    <style name="home_top_nav_radiobutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">17sp</item>
        <item name="android:color">@android:color/white</item>
    </style>
    <style name="search_top_nav_radiobutton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@drawable/selector_search_rb_text_color</item>
        <item name="android:color">@color/mainBaseColor</item>
        <item name="android:drawableBottom">@drawable/selector_search_rb_bottom_indicator</item>
    </style>
    <style name="topic_text_format">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
        <item name="android:textColor">@color/tipGrayColor</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>