<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EFF6"
    android:orientation="vertical">

    <include
        android:id="@+id/top_nav_layout"
        layout="@layout/layout_base_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/security_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="49dp"
        android:background="@mipmap/img_excuse_low" />

    <TextView
        android:id="@+id/security_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="31.5dp"
        android:gravity="center"
        android:text="安全等级:低"
        android:textColor="#666666"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/security_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:gravity="center"
        android:text="通过以下设置可提高安全等级"
        android:textColor="#999999"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="52dp"
        android:background="#DFDEE0" />

    <RelativeLayout
        android:id="@+id/security_phone"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="19.5dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/img_phone" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="29.5dp"
            android:gravity="center"
            android:paddingRight="13dp"
            android:text="手机绑定"
            android:textColor="#070707"
            android:textSize="13sp" />


        <TextView
            android:id="@+id/security_stat"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="19.5dp"
            android:gravity="center"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:text="未绑定"
            android:textColor="#999999"
            android:textSize="13sp" />

        <View
            android:layout_width="19.5dp"
            android:layout_height="20.5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:background="@mipmap/img_sign_right" />
    </RelativeLayout>
</LinearLayout>