<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EFF6"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <include
        android:id="@+id/top_nav_layout"
        layout="@layout/layout_base_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/usr_profit_youbi"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usr_profit_youbi_count"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:text="000000"
                android:textColor="#FF8149FF"
                android:textSize="23sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="悠币"
                android:textColor="#999999"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/usr_profit_red"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_below="@+id/usr_profit_youbi"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/usr_profit_red_money"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|bottom"
                android:text="000000"
                android:textColor="#FF7895"
                android:textSize="23sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_horizontal|top"
                android:text="可领取红包(元)"
                android:textColor="#999999"
                android:textSize="13sp" />
        </LinearLayout>

        <Button
            android:id="@+id/usr_profit_exchange"
            android:layout_width="188.5dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="108dp"
            android:background="@drawable/shape_usr_profit_btn_stoke"
            android:text="兑换" />

        <Button
            android:id="@+id/usr_profit_wx"
            android:layout_width="188.5dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="62dp"
            android:background="@drawable/shape_usr_profit_btn_solid"
            android:text="绑定微信" />

    </RelativeLayout>
</LinearLayout>