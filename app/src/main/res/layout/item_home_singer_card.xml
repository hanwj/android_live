<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundedimageview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 基本信息-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@android:color/white">
        <com.xcyo.live.view.RoundImageView
            android:id="@+id/item_head"
            android:layout_width="@dimen/head_icon_size"
            android:layout_height="@dimen/head_icon_size"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            roundedimageview:border_outside_color="@color/mainBaseColor"
            roundedimageview:border_thickness="0.5dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/temp_singer_photo"/>
        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item_head"
            android:layout_toRightOf="@+id/item_head"
            android:layout_marginLeft="7dp"
            android:textSize="@dimen/little_big_text_size"
            android:textColor="@android:color/black"
            android:text="名字"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/item_name"
            android:layout_below="@+id/item_name"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/location_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:src="@drawable/selector_location_icon"/>
            <TextView
                android:id="@+id/item_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/tipGrayColor"
                android:text="位置"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="11dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/item_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:textSize="@dimen/big_text_size"
                android:textColor="@color/mainBaseColor"
                android:text="123"/>
            <TextView
                android:id="@+id/num_fixed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/small_text_size"
                android:textColor="@color/tipGrayColor"
                android:text="在看"/>
        </LinearLayout>
    </RelativeLayout>
    <!-- 封面 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="375dp">
        <ImageView
            android:id="@+id/item_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/temp_singer_photo"/>
        <ImageView
            android:id="@+id/item_live_status"
            android:layout_width="70dp"
            android:layout_height="22dp"
            android:layout_gravity="top|right"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/living_mark_icon"/>
    </FrameLayout>

    <!-- 话题-->
    <FrameLayout
        android:id="@+id/item_topic_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="32dp"
        android:background="@android:color/white">
        <TextView
            android:id="@+id/item_topic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_gravity="center_vertical"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/mainBaseColor"
            android:text="##话题##"/>
    </FrameLayout>
</LinearLayout>