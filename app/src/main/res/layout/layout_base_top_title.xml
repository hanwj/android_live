<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/frag_base_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:background="@color/mainBaseColor"
        android:orientation="horizontal">
        <!--返回-->
        <TextView
            android:id="@+id/base_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingLeft="@dimen/distance_to_screen_sides"
            android:drawableLeft="@mipmap/back_arrow"
            android:drawablePadding="5dp"
            android:textSize="@dimen/big_text_size"
            android:textColor="@android:color/white"
            android:text=""/>
        <!--头部文字-->
        <TextView
            android:id="@+id/base_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:singleLine="true"
            android:ellipsize="end"
            android:textSize="@dimen/big_text_size"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:text="标题"/>
        <!--完成-->
        <TextView
            android:id="@+id/base_title_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/big_text_size"
            android:gravity="center_vertical"
            android:paddingRight="@dimen/distance_to_screen_sides"
            android:layout_alignParentRight="true"
            android:text="完成"
            android:visibility="gone"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</LinearLayout>
