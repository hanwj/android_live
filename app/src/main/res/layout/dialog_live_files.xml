<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_live_files_background"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="31dp">

        <TextView
            android:id="@+id/files_controll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="32dp"
            android:text="举报"
            android:textColor="#8149FF"
            android:textSize="11sp"
            android:visibility="invisible"/>

        <ImageView
            android:id="@+id/files_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/live_files_close" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="59dp">

        <RelativeLayout
            android:id="@+id/files_icon"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_centerInParent="true">

            <com.xcyo.live.view.RoundImageView
                android:id="@+id/files_icon_me"
                android:layout_width="59dp"
                android:layout_height="59dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/temp_singer_photo" />

            <View
                android:id="@+id/files_icon_tag"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:background="#df1ff0" />
        </RelativeLayout>

        <com.xcyo.live.view.RoundImageView
            android:id="@+id/files_icon_fance"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="11dp"
            android:layout_toLeftOf="@+id/files_icon"
            android:src="@mipmap/temp_singer_photo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="7.5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/files_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="昵称昵称昵称"
            android:textColor="#333333"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/files_sex"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@mipmap/male_icon"
            android:scaleType="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="4dp"/>

        <TextView
            android:id="@+id/files_level"
            android:layout_width="43.5dp"
            android:layout_height="18dp"
            android:layout_marginLeft="7dp"
            android:background="@mipmap/level9"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:singleLine="true"
            android:text="156"
            android:textColor="@android:color/white"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="18dp"
        android:layout_marginTop="10.5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/files_usr_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="悠悠号:000000"
            android:textColor="#666666"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/files_usr_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@mipmap/location_icon"
            android:gravity="center_vertical"
            android:text="北京市"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

    <GridLayout
        android:id="@+id/files_tag_layer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="13.5dp"
        android:orientation="horizontal"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:drawableLeft="@mipmap/files_tag_icon"
            android:text="萌妹子"
            android:textColor="#FFBB8E"
            android:textSize="13sp" />
    </GridLayout>
    <TextView
        android:id="@+id/files_signature"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="12sp"
        android:textColor="#999999"
        android:text="个人签名"
        android:maxWidth="219dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:orientation="vertical"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/files_follow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="关注:00"
                android:textColor="#999999"
                android:textSize="12sp"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:background="#CCCCCC"/>
            <TextView
                android:id="@+id/files_fance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="38dp"
                android:text="粉丝:00"
                android:textColor="#999999"
                android:textSize="12sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/files_gift_send"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="送出:00"
                android:textColor="#999999"
                android:textSize="12sp"/>
            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginBottom="7dp"
                android:background="#CCCCCC"/>
            <TextView
                android:id="@+id/files_coin"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="38dp"
                android:text="悠币:00"
                android:textColor="#999999"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/files_line"
        android:layout_width="269.5dp"
        android:layout_height="1px"
        android:background="#D9D9D9"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <TextView
            android:id="@+id/files_m_follow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#8149FF"
            android:textSize="14sp"
            android:text="关注"
            android:gravity="center"/>
        <TextView
            android:id="@+id/files_m_letter"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#8149FF"
            android:textSize="14sp"
            android:text="私信"
            android:gravity="center"/>
        <TextView
            android:id="@+id/files_m_reply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#8149FF"
            android:textSize="14sp"
            android:text="回复"
            android:gravity="center"/>
        <TextView
            android:id="@+id/files_m_homepage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#8149FF"
            android:textSize="14sp"
            android:text="主页"
            android:gravity="center"/>
</LinearLayout>
</LinearLayout>