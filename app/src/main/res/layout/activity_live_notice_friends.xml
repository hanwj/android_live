<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/mainBackgroundColor">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@android:color/white"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="center"
        android:textColor="@color/tipGrayColor"
        android:textSize="13sp"
        android:text="选择你要通知的人，只有他们会收到你的直播消息；你的直播不会被别人看到"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@android:color/white">
        <ListView
            android:id="@+id/live_notice_friends_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/floatingWhite"
            android:dividerHeight="0.5dp"
            android:choiceMode="multipleChoice">
        </ListView>
        <LinearLayout
            android:id="@+id/empty_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/friend_empty_icon"/>
            <TextView
                android:id="@+id/empty_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="17dp"
                android:layout_gravity="center_horizontal"
                android:textSize="15sp"
                android:textColor="@color/tipGrayColor"
                android:text="空空如也"/>
        </LinearLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/floatingWhite"/>
    <Button
        android:id="@+id/live_notice_friends_cancel"
        android:layout_width="282dp"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/selector_button_bg2"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/selector_button_color2"
        android:text="取消"/>
</LinearLayout>