<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- 顶部nav-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_bar_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/distance_to_screen_sides"
        android:paddingRight="@dimen/distance_to_screen_sides"
        android:background="@color/mainBaseColor">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="28dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:background="@drawable/shape_white_round_corner_bg">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/tipGrayColor"
                android:text="#"/>
            <EditText
                android:id="@+id/add_topic_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="输入你的话题 不超过16个字"
                android:textColorHint="#cccccc"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@android:color/black"
                android:background="@null"
                android:inputType="text"
                android:singleLine="true"
                android:imeOptions="actionDone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:textSize="@dimen/normal_text_size"
                android:textColor="@color/tipGrayColor"
                android:text="#"/>
        </LinearLayout>

        <TextView
            android:id="@+id/add_topic_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/distance_to_screen_sides"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size"
            android:text="取消"/>
    </LinearLayout>

    <ListView
        android:id="@+id/add_topic_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@color/floatingWhite"
        android:dividerHeight="0.5dp"
        android:background="@android:color/white">

    </ListView>
</LinearLayout>