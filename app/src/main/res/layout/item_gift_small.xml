<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:paddingBottom="9dp">

        <RelativeLayout
            android:id="@+id/gift_layer"
            android:layout_width="161dp"
            android:layout_height="38.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12.5dp"
            android:background="@drawable/shape_gift_small_background" >

            <com.xcyo.live.view.RoundImageView
                android:id="@+id/gift_usr_icon"
                android:layout_width="33dp"
                android:layout_height="33dp"
                android:layout_margin="2.75dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/live_wechatground" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_toRightOf="@+id/gift_usr_icon"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="21dp"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/gift_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:text="name"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/gift_level"
                        android:layout_width="43.5dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:background="@mipmap/level2"
                        android:gravity="center_vertical"
                        android:paddingLeft="18.8dp"
                        android:text="256"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/gift_dis"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:singleLine="true"
                    android:text="discription"
                    android:textColor="#ffea00"
                    android:textSize="14sp" />
            </LinearLayout>
        </RelativeLayout>

        <ImageView
            android:id="@+id/gift_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="142.5dp"
            android:background="@mipmap/s_gift_img"
            android:maxHeight="38.5dp"
            android:scaleType="centerInside" />

        <TextView
            android:id="@+id/gift_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/gift_img"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/gift_img"
            android:text="x1"
            android:textStyle="bold"
            android:textColor="#8149ff"
            android:textSize="12sp" />
    </RelativeLayout>

</RelativeLayout>