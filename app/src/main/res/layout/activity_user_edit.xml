<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include
        android:id="@+id/top_nav_layout"
        layout="@layout/layout_base_top_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainBackgroundColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/usr_edit_icon_layer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="头像"
                    android:textColor="#000000" />

                <ImageView
                    android:id="@+id/usr_edit_icon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/temp_singer_photo" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/usr_edit_name_layer"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="昵称"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/usr_edit_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="right|center_vertical"
                    android:text="CKy"
                    android:textColor="@android:color/darker_gray" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@mipmap/img_sign_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/usr_edit_number_layer"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="悠悠号"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/usr_edit_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="right|center_vertical"
                    android:text="1012540037"
                    android:textColor="@android:color/darker_gray" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@mipmap/img_sign_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/usr_edit_sex_layer"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="性别"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/usr_edit_sex"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="right|center_vertical"
                    android:text="女"
                    android:textColor="@android:color/darker_gray" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@mipmap/img_sign_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/usr_edit_signature_layer"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="个人签名"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/usr_edit_signature"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="right|center_vertical"
                    android:text="这家伙很懒,没有留下什么信息~"
                    android:textColor="@android:color/darker_gray" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@mipmap/img_sign_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/usr_edit_identity_layer"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="身份信息"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/usr_edit_identity"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="right|center_vertical"
                    android:text=""
                    android:textColor="@android:color/darker_gray" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@mipmap/img_sign_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/usr_edit_identification_layer"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="悠悠认证"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/usr_edit_identification"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:gravity="right|center_vertical"
                    android:text="申请悠悠认证"
                    android:textColor="@android:color/darker_gray" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/usr_edit_age_layer"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="年龄"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/usr_edit_age"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="right|center_vertical"
                    android:text="你猜"
                    android:textColor="@android:color/darker_gray" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@mipmap/img_sign_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/usr_edit_emotion_layer"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="情感"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/usr_edit_emotion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="right|center_vertical"
                    android:text="保密"
                    android:textColor="@android:color/darker_gray" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@mipmap/img_sign_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/usr_edit_hometown_layer"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="家乡"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/usr_edit_hometown"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="right|center_vertical"
                    android:text="地球"
                    android:textColor="@android:color/darker_gray" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@mipmap/img_sign_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/usr_edit_profession_layer"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/white"
                android:paddingLeft="12.5dp"
                android:paddingRight="12.5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="职业"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/usr_edit_profession"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="32dp"
                    android:gravity="right|center_vertical"
                    android:text="主播"
                    android:textColor="@android:color/darker_gray" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:background="@mipmap/img_sign_right" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
