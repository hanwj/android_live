<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:roundedimageview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="95dp"
    android:background="@android:color/white">
    <ImageView
        android:id="@+id/item_rank_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="12dp"
        android:src="@mipmap/rank_num1"/>
    <com.xcyo.live.view.RoundImageView
        android:id="@+id/item_rank_icon"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="76dp"
        android:scaleType="centerCrop"
        roundedimageview:border_inside_color="@color/mainBaseColor"
        roundedimageview:border_thickness="0.5dp"
        android:src="@mipmap/default_rank_icon"/>
    <ImageView
        android:id="@+id/item_rank_identify"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_alignRight="@id/item_rank_icon"
        android:layout_alignBottom="@id/item_rank_icon"
        android:background="@color/tipGrayColor"/>
    <!--用户信息-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/item_rank_icon"
        android:orientation="vertical">
        <include
            layout="@layout/layout_user_name"/>
        <TextView
            android:id="@+id/search_user_frag_listview_item_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="#333333"
            android:textSize="11sp"
            android:text="贡献了500" />
    </LinearLayout>
</RelativeLayout>