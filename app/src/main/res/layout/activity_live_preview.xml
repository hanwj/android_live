<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/live_background"/>
    <ImageView
        android:id="@+id/live_preview_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="12dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/selector_close_btn"/>

    <EditText
        android:id="@+id/live_preview_title"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:gravity="center_horizontal"
        android:background="@null"
        android:textSize="@dimen/big_text_size"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="给直播写个标题吧"/>
    <LinearLayout
        android:id="@+id/live_preview_info"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/live_preview_title"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/live_preview_topic"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size"
            android:text="# 添加话题"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@android:color/white"/>
        <TextView
            android:id="@+id/live_preview_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@mipmap/location_icon"
            android:drawablePadding="3dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/normal_text_size"
            android:text="定位开"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/live_preview_share_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:layout_below="@id/live_preview_info"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/live_preview_third_shard_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/live_preview_wechat_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/selector_wechat_icon"/>
            <ImageView
                android:id="@+id/live_preview_friend_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/selector_friend_icon"/>
            <ImageView
                android:id="@+id/live_preview_qq_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/selector_qq_icon"/>
            <ImageView
                android:id="@+id/live_preview_qqzone_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:src="@drawable/selector_qqzone_icon"/>
        </LinearLayout>

        <TextView
            android:id="@+id/live_preview_locked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/live_unlocked_icon"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="#cccccc"
            android:text=""/>
    </LinearLayout>
    <Button
        android:id="@+id/live_preview_start_live"
        android:layout_width="283dp"
        android:layout_height="43dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/live_preview_share_layout"
        android:layout_marginTop="32dp"
        android:background="@drawable/selector_button_bg2"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/selector_button_color2"
        android:text="开始直播"/>
</RelativeLayout>