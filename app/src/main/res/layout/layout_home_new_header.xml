<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@android:color/white">
    <LinearLayout
        android:id="@+id/header_topic_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/header_topic_12"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/header_topic1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/topic_text_format"
                android:text="#新人直播，求关注#"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/floatingWhite"/>
            <TextView
                android:id="@+id/header_topic2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/topic_text_format"
                android:text="#我期待不一样的直播#"/>
        </LinearLayout>
        <View
            android:id="@+id/header_split_line1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/floatingWhite"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/header_topic3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/topic_text_format"
                android:text="#我是傲娇的小宝宝#"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/floatingWhite"/>
            <TextView
                android:id="@+id/header_topic_more"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                style="@style/topic_text_format"
                android:text="热门话题   >"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/mainBackgroundColor"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:textSize="@dimen/big_text_size"
        android:textColor="@color/tipGrayColor"
        android:text="最新主播"/>
</LinearLayout>