<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!-- 顶部导航栏 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/action_bar_height"
            android:background="@color/mainBaseColor">

            <ImageView
                android:id="@+id/main_home_search"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:background="@drawable/selector_default_click_background"
                android:paddingLeft="@dimen/distance_to_screen_sides"
                android:paddingRight="@dimen/distance_to_screen_sides"
                android:src="@mipmap/search_icon" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true">

                <ImageView
                    android:id="@+id/main_me_tip"
                    android:layout_width="30dp"
                    android:layout_height="40dp"
                    android:scaleType="center"
                    android:src="@mipmap/c_stone" />

                <TextView
                    android:id="@+id/main_me_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_toRightOf="@+id/main_me_tip"
                    android:gravity="center"
                    android:text="送出000" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/main_home_message"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_default_click_background"
                android:paddingLeft="@dimen/distance_to_screen_sides"
                android:paddingRight="@dimen/distance_to_screen_sides"
                android:src="@mipmap/message_icon" />

            <TextView
                android:id="@+id/main_home_red_tip"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/shape_red_point"
                android:gravity="center"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="9sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/mainBackgroundColor"
            android:orientation="vertical"
            android:paddingBottom="38dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/mainBaseColor"
                android:minHeight="176dp"
                android:orientation="vertical">

                <com.xcyo.live.view.RoundImageView
                    android:id="@+id/frag_me_icon"
                    android:layout_width="57dp"
                    android:layout_height="57dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="4dp"
                    android:src="@mipmap/temp_singer_photo"
                    app:border_outside_color="#FFFFFF"
                    app:border_thickness="45dp" />

                <TextView
                    android:id="@+id/frag_me_no"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="悠悠号:000000000"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.5dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/frag_me_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="昵称"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <ImageView
                        android:id="@+id/frag_me_sex"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dp"
                        android:scaleType="center"
                        android:src="@mipmap/male_icon" />

                    <TextView
                        android:id="@+id/frag_me_level_tip"
                        android:layout_width="29dp"
                        android:layout_height="12dp"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/level9"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:singleLine="true"
                        android:text="156"
                        android:textColor="@android:color/white"
                        android:textSize="9sp" />

                    <View
                        android:id="@+id/usr_edit"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="5dp"
                        android:background="@mipmap/usr_info_edit" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/frag_me_attention"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:layout_marginRight="12dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|right"
                        android:text="关注:000000"
                        android:textColor="#FFAC91FE"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="16dp"
                        android:layout_gravity="center_vertical"
                        android:background="#FFFFFFFF" />

                    <TextView
                        android:id="@+id/frag_me_fans"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical|left"
                        android:text="粉丝:000000"
                        android:textColor="#FFAC91FE"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/frag_me_signature"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="----------------------"
                    android:textColor="#FFD5C8F0"
                    android:textSize="12sp" />

                <RelativeLayout
                    android:id="@+id/frag_me_tag"
                    android:layout_width="120dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="6dp"
                    android:background="@android:color/darker_gray" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="213dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|bottom"
                            android:paddingBottom="13dp"
                            android:paddingLeft="13dp"
                            android:text="直播"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/frag_me_live"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|bottom"
                            android:paddingBottom="13dp"
                            android:paddingRight="13dp"
                            android:text="0个"
                            android:textColor="#666666" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="center"
                            android:src="@mipmap/img_me_live" />
                    </RelativeLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@null" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|bottom"
                            android:paddingBottom="13dp"
                            android:paddingLeft="13dp"
                            android:text="等级"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/frag_me_level"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|bottom"
                            android:paddingBottom="13dp"
                            android:paddingRight="13dp"
                            android:text="0级"
                            android:textColor="#666666" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="center"
                            android:src="@mipmap/img_me_level" />
                    </RelativeLayout>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@null" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|bottom"
                            android:paddingBottom="13dp"
                            android:paddingLeft="13dp"
                            android:text="收益"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/frag_me_profit"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="right|bottom"
                            android:paddingBottom="13dp"
                            android:paddingRight="13dp"
                            android:text="0悠币"
                            android:textColor="#666666" />

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="center"
                            android:src="@mipmap/img_me_profit" />
                    </RelativeLayout>

                    <View
                        android:layout_width="2dp"
                        android:layout_height="match_parent"
                        android:background="@null" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@android:color/white">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="left|bottom"
                            android:paddingBottom="13dp"
                            android:paddingLeft="13dp"
                            android:text="账户"
                            android:textColor="#666666" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingBottom="13dp"
                            android:paddingRight="13dp">
                            <TextView
                                android:id="@+id/frag_me_account"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="18dp"
                                android:gravity="right|bottom"
                                android:maxHeight="21dp"
                                android:text="0"
                                android:textColor="#666666" />

                            <View
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:background="@mipmap/c_stone"
                                android:layout_alignParentBottom="true"
                                android:layout_alignParentRight="true"/>

                        </RelativeLayout>

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="center"
                            android:src="@mipmap/img_me_account"
                            android:visibility="gone" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frag_me_contribution"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="悠币贡献榜"
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <LinearLayout
                    android:id="@+id/frag_me_contribution_info"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/img_sign_right" />
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/frag_me_identification"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="2dp"
                android:background="@android:color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="悠悠认证"
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/img_sign_right" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/frag_me_setting"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/white"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="13dp"
                    android:paddingRight="13dp"
                    android:text="设置"
                    android:textColor="#999999"
                    android:textSize="13sp" />

                <View
                    android:layout_width="19.5dp"
                    android:layout_height="20.5dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:background="@mipmap/img_sign_right" />
            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>
</ScrollView>